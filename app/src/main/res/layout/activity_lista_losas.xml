<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.ActivityListaLosas">

    <!-- RecyclerView para mostrar la lista de losas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_losas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_ir_agregar_losa" />

    <!-- BotÃ³n para ir a la actividad de agregar una nueva losa -->
    <Button
        android:id="@+id/btn_ir_agregar_losa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Losa"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
