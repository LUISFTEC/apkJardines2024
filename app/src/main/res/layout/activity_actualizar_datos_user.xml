<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.actividades.usuario.ActualizarDatosUSER_Activity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="37dp"
        android:text="ACTUALIZAR DATOS"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="341dp"
        android:layout_height="314dp"
        android:layout_marginTop="88dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA REGISTRO:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvFecha_registro_ActualizarDatosCLI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2023-10-10"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DNI:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvDNI_ActualizarDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="0000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombres y Apellidos:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvNOMBRES_ActualizarDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtCorreo_ActualizarDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celular:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtCelular_ActualizarDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="333dp"
        android:layout_height="190dp"
        android:layout_marginTop="29dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btnUpdate_ActDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Actualizar Datos" />

        <Button
            android:id="@+id/btnResetclave_ActDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET CLAVE" />

        <Button
            android:id="@+id/btnDeleteUser_ActualizarDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DARSE DE BAJA" />

        <Button
            android:id="@+id/btnSALIR_ActDatos_Actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOLVER" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>