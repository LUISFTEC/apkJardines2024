<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.actividades.admin.MenuAdmin_Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Bienvenido administrador"
        android:textColor="#DF1919"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="251dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="143dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <!-- Nuevo botÃ³n para gestionar losas -->
        <Button
            android:id="@+id/btnGestionarLosas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GESTIONAR LOSAS" />

        <Button
            android:id="@+id/btnListarRsvUsers_MenuAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTAR RESERVAS" />

        <Button
            android:id="@+id/btnListarUsers_MenuAdm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="LISTAR USUARIOS" />

        <Button
            android:id="@+id/btnSalirAdmin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SALIR" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTAR LOSAS"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
