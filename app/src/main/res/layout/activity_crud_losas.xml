<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.ActivityCrudLosas">

    <!-- Imagen para la vista previa de la losa -->
    <ImageView
        android:id="@+id/iv_losa_vista_previa"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Botón para subir una foto -->
    <Button
        android:id="@+id/btn_subir_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir Foto"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_losa_vista_previa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo de texto para el nombre de la losa -->
    <EditText
        android:id="@+id/et_losa_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Losa"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/btn_subir_foto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Campo de texto para la descripción de la losa -->
    <EditText
        android:id="@+id/et_losa_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción de la Losa"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/et_losa_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Botón para añadir una losa -->
    <Button
        android:id="@+id/btn_añadir_losa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir Losa"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_losa_descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón para regresar -->
    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_añadir_losa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
